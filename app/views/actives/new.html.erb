<div class="head-con">
  <h1>New Post</h1>
</div>


  <div class="post-container">

    <%= form_for @active do |f| %>

      <div class="title">
        <%= f.label :title %><br>
        <%= f.text_field :title, :size => 68 %>
      </div>

      <div class="about">
        <%= f.label :about %><span> (100 characters maximum)</span><br>
        <%= f.text_area :about, :cols => 88, :rows => 6, :maxlength => 100 %>
      </div>

      <div class="image">
        <%= f.label :image %><br>
        <%= f.file_field :image %>
      </div>
      
      <div class='form-group'>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
          <div class='form-check'>
              <%= tag.label class: 'form-check-label' do %>
                  <%= tag.check_box class: 'form-check-input' %>
                  <%= tag.text %>
              <% end %>
          </div>
      <% end %>
      </div>

      <div class="post-form">
        <%= f.submit "投稿する" %>
      </div>

    <% end %>
  </div>

<div class="user-top">
  <%= link_to "トップページに戻る", actives_path %>
</div>